			<value>GENE_ONTOLOGY</value>
		</list>
		<list>
			<value>UM-BBD</value>
			<value>UMBBD</value>
		</list>
		<list>
			<value>PSI-MI</value>
			<value>PSI MI</value>
			<value>PSIMI</value>
			<value>MI</value>
		</list>
		<list>
			<value>REFSEQ PROTEIN</value>
			<value>REFSEQ</value>
