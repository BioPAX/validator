<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false">
	<appender name="out" class="org.apache.log4j.ConsoleAppender">
        <!--<param name="threshold" value="DEBUG"/>-->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-4r [%t] %-5p %c{2} %x - %m%n"/>
		</layout>
	</appender>
    <appender name="error" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.err" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n"/>
		</layout>
	</appender>
    <appender name="file"
		class="org.apache.log4j.RollingFileAppender">
		<param name="maxFileSize" value="100KB" />
		<param name="maxBackupIndex" value="5" />
		<param name="File" value="biopax-validator.log" />
		<param name="threshold" value="info"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{ISO8601} [%t] %-5p %c{3} %x - %m%n" />
		</layout>
	</appender>
 
    <logger name="org.biopax.validator" additivity="false">
        <level value="trace"/>
        <appender-ref ref="error"/>
    </logger>

    <logger name="org.springframework" additivity="false">
        <level value="warn"/>
        <appender-ref ref="error"/>
    </logger>

    <logger name="org.biopax.paxtools" additivity="false">
        <level value="warn"/>
        <appender-ref ref="error"/>
    </logger>

    <root>
		<priority value="info"/>
		<appender-ref ref="error"/>
	</root>
	
</log4j:configuration>
