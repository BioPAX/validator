<!DOCTYPE aspectj PUBLIC
        "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>
    <!-- 
    <weaver options="-verbose -showWeaveInfo -XmessageHandlerClass:org.springframework.aop.aspectj.AspectJWeaverMessageHandler -Xreweavable">
    -->
    <weaver options="-Xreweavable">
        <!-- only weave classes within packages that match listed -->
        <include within="org.biopax.validator.impl.*" />
        <include within="org.biopax.paxtools..*" />
        <include within="org.biopax.validator.rules.*" />
    </weaver>
    <aspects>
        <!-- use only the following aspects for weaving -->
        <aspect name="org.biopax.validator.impl.BehaviorAspect" />
        <aspect name="org.biopax.validator.impl.ExceptionsAspect" />
        <aspect name="org.biopax.validator.impl.ControlAspect" />
    </aspects>
</aspectj>
